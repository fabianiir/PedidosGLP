<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/parent_layout_catalago_producto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Tanque de 80 K"
                android:textSize="24sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
            <TextView
                android:id="@+id/textViewprecio_unitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Direccion"
                android:layout_below="@id/textViewProducto"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>



            <Button android:layout_height="50dp" android:layout_weight=".15"
                android:text="+" android:layout_width="70dp" android:id="@+id/btnAgregarCatalagoProducto"
                android:layout_marginLeft="170dp"
                />






        </RelativeLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>


