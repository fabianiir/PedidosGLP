<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingRight="24dp"
        >


        <TextView
            android:id="@+id/tvDatosCliente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Datos Cliente:"
            android:layout_marginLeft="50dp"

            />

        <TextView
            android:id="@+id/tvCanNombreOperador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Nombre: Pedro Flores"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tvCanDireccion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Direccion: "
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tvCanDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Descripcion: "
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"

            />

        <TextView
            android:id="@+id/tvCanEstatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Estatus: "
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"

            />
        <TextView
            android:id="@+id/tvCanTotal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Total: "
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"

            />





        <Button android:layout_height="50dp"
            android:text="Reimprimir" android:layout_width="150dp" android:id="@+id/btnReimprimirPedido"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            />





    </LinearLayout>

</android.support.constraint.ConstraintLayout>