<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingRight="24dp"
        >


        <TextView
            android:id="@+id/tvDatosCliente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Datos Cliente:"
            android:layout_marginLeft="50dp"

            />

        <TextView
            android:id="@+id/tvCanNombreOperador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Nombre: Pedro Flores"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tvCanDireccion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Direccion: "
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/tvCanDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Descripcion: "
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"

            />
        <TextView
            android:id="@+id/tvCanMotivoCancelacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Motivo Cancelacion: "
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"

            />


        <Spinner
            android:id="@+id/spinnerMotivoCancelacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />




        <TextView
            android:id="@+id/tvCanObservaciones"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Observaciones: "
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"

            />

        <EditText
            android:id="@+id/textViewObservaciones"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="10"
            android:hint="Observaciones:"
            android:layout_marginTop="15dp"
            android:background="@color/colorBlanco"
            android:scrollbars="vertical"/>



        <Button android:layout_height="50dp"
            android:text="Aceptar" android:layout_width="150dp" android:id="@+id/btnAceptarCancelarPedido"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            />





    </LinearLayout>


</android.support.constraint.ConstraintLayout>